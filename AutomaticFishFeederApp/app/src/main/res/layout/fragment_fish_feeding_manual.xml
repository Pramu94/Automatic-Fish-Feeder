    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FishFeedingManualFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
