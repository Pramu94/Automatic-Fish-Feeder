<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FishFeedingManualFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileSettingsProfilePicture"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:adjustViewBounds="false"
            android:src="@drawable/img_feeding"
            android:cropToPadding="false"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/purple"
            app:layout_constraintBottom_toTopOf="@+id/LinearLayout2" />

        <Button
            android:id="@+id/buttonFeedingOnNow"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feeding No Now" />

        <Button
            android:id="@+id/buttonFeedingOffNow"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feeding Off Now" />
    </LinearLayout>

</FrameLayout>