<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WaterChangeAutoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/progressWaterLevel"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="150dp"
            android:layout_height="300dp"
            android:progressDrawable="@drawable/verticleprogressbar" />

        <TextView
            android:id="@+id/textViewWaterLevel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignEnd="@+id/progressWaterLevel"
            android:layout_alignBottom="@+id/progressWaterLevel"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="0%"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </RelativeLayout>

</FrameLayout>